{
  "name": "@glixar/core",
  "version": "0.1.0-alpha",
  "homepage": "https://glixar-org.github.io/glixar",
  "description": "A graphics engine for rendering thousands of animated objects on maps, at a speed traditional libraries cannot match.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "npm run build:wasm && vite",
    "build": "npm run build:wasm && vite build",
    "preview": "vite preview",
    "build:wasm": "wasm-pack build ./glixar-wasm --target web",
    "docs": "typedoc --out dist/docs --entryPointStrategy expand ./src",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"index.html\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glixar-org/glixar.git"
  },
  "keywords": [
    "webgl",
    "webassembly",
    "vector",
    "rendering",
    "graphics"
  ],
  "author": "glixar-org",
  "license": "MIT",
  "devDependencies": {
    "@types/earcut": "^2.1.4",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "cpy-cli": "^6.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "gl-matrix": "^3.4.3",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.1.1",
    "vite": "^7.1.3",
    "wasm-pack": "^0.13.1"
  },
  "dependencies": {
    "earcut": "^2.2.4"
  }
}
