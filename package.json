{
  "name": "@glixar/core",
  "version": "0.0.1-alpha",
  "description": "High-performance WebGL/WebAssembly library for vector rendering.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "esbuild src/main.ts --bundle --outfile=dist/glixar.js --format=esm --sourcemap",
    "dev": "esbuild src/main.ts --bundle --outfile=demo/glixar.bundle.js --format=esm --sourcemap --servedir=demo --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"demo/**/*.html\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glixar-org/glixar.git"
  },
  "keywords": [
    "webgl",
    "webassembly",
    "vector",
    "rendering",
    "graphics"
  ],
  "author": "glixar-org",
  "license": "MIT",
  "overrides": {
    "axios": "^1.7.2"
  },
  "bugs": {
    "url": "https://github.com/glixar-org/glixar/issues"
  },
  "homepage": "https://github.com/glixar-org/glixar#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "gl-matrix": "^3.4.3",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "wasm-pack": "^0.13.1"
  }
}
